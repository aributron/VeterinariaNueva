@model VeterinariaNueva.ViewModel.VMHistorialList
@{
    ViewData["Title"] = "HistorialMascotas";
}



<h4>Historial de turnos de la mascota: @ViewBag.Mascota</h4>

    <table class="table table-primary table-dark">
        <thead>
            <tr>
                <th>
                    <p>Fecha y hora </p>
                </th>
                <th>
                    <p>Mascota</p>
                </th>
                <th>
                    <p>Animal</p>
                </th>
                <th>
                    <p>Email del cliente</p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Historial)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mascota.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mascota.Tipo_Mascota)
                </td>
                <td>
                    <a asp-action="HistorialClientes" asp-route-id="@item.Cliente.Id">
                        @Html.DisplayFor(modelItem => item.Cliente.Email)
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>

    <style>
        tbody {
            background: #000000;
        }
    </style>

