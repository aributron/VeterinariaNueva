    @model VeterinariaNueva.ViewModel.VMHistorialList

    @{
        ViewData["Title"] = "Clientes";
    }
    <p>
        <a asp-action="HistorialClientes">Create New</a>
    </p>

Historial de turnos del cliente: @ViewBag.Cliente
    
    <table class="table table-primary table-dark">
        <thead>
            <tr>
                <th>
                    <p>Fecha y hora </p>
                </th>
                <th>
                    <p>Email del cliente</p>
                </th>
                <th>
                    <p>Mascota </p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Historial)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mascota.Nombre)
                    </td>

                </tr>
            }
        </tbody>
    </table>

